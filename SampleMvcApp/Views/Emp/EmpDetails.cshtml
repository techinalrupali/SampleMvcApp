
@{
    ViewBag.Title = "EmpDetails";
}

<h2>Emp Details</h2>
@using (Html.BeginForm())
{
    <div class="container">
        <table class="table">
            <tr>
               <th>Emp Id</th>
                <td>
                    @Html.TextBox("empId") 
                </td>
            </tr>
            <tr>
                <th>Emp Name</th>
                <td>
                    @Html.TextBox("empname")
                </td>
            </tr>
            <tr>
                <th>Emp Mobile Number</th>
                <td>
                    @Html.TextBox("empphone")
                </td>
            </tr>
            <tr>
                <th>Select Gender</th>
                <td>
                    @Html.RadioButton("Gender", "Male") Male
                    @Html.RadioButton("Gender", "Female") Female
                </td>
            </tr>
            <tr>
                <th>Select Technology</th>
                <td>
                    <input type="checkbox" value="C#" name="technology" /> C#
                    <input type="checkbox" value="Java" name="technology" /> Java
                    <input type="checkbox" value="Python" name="technology" /> Python
                </td>
            </tr>
            <tr>
                <th>Do you have any experience of this technology ?</th>
                <td>
                    @Html.DropDownList("Options");
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>

    </div>

}